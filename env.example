# ============================================
# FIREBASE CONFIGURATION
# ============================================
# Firebase proje ayarlarınızı Firebase Console'dan alın
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# ============================================
# PAYTR PAYMENT INTEGRATION
# ============================================
# PayTR Merchant Panel'den alacağınız bilgiler
# ÖNEMLİ: Gerçek değerleri asla commit etmeyin!
PAYTR_MERCHANT_ID=your_paytr_merchant_id
PAYTR_MERCHANT_KEY=your_paytr_merchant_key
PAYTR_MERCHANT_SALT=your_paytr_merchant_salt
PAYTR_TEST_MODE=true
PAYTR_BASE_URL=https://www.paytr.com

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Production için gerçek domain'inizi kullanın
NEXT_PUBLIC_BASE_URL=http://localhost:3000
# Production: NEXT_PUBLIC_BASE_URL=https://celenkdiyari.com

# ============================================
# ADMIN PANEL CONFIGURATION
# ============================================
# ÖNEMLİ: Production'da mutlaka değiştirin!
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_strong_admin_password_here

# ============================================
# EMAILJS CONFIGURATION
# ============================================
# EmailJS Dashboard'dan alacağınız bilgiler
# https://www.emailjs.com/
EMAILJS_SERVICE_ID=service_deg1z9a
EMAILJS_PUBLIC_KEY=your-emailjs-public-key
# Alternatif olarak NEXT_PUBLIC_ prefix'li versiyonlar da kullanılabilir
NEXT_PUBLIC_EMAILJS_SERVICE_ID=service_deg1z9a
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your-emailjs-public-key
EMAILJS_USER_ID=your-emailjs-user-id
EMAILJS_TEMPLATE_CUSTOMER=template_customer
EMAILJS_TEMPLATE_ADMIN=template_admin
ADMIN_EMAIL=celenkdiyari@gmail.com

# ============================================
# GOOGLE SERVICES CONFIGURATION
# ============================================
# Google Analytics, Search Console ve diğer Google servisleri için
GOOGLE_PROJECT_ID=your-google-project-id
GOOGLE_PRIVATE_KEY_ID=your-private-key-id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_ANALYTICS_PROPERTY_ID=your-ga4-property-id
GOOGLE_SITE_URL=https://celenkdiyari.com

# ============================================
# WHATSAPP INTEGRATION (Optional)
# ============================================
# WhatsApp Business API için
WHATSAPP_PHONE_NUMBER=+905551234567
WHATSAPP_API_KEY=your-whatsapp-api-key

# ============================================
# SECURITY & RATE LIMITING
# ============================================
# API rate limiting için
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

